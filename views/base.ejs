<%-include('header')-%>

    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Login for the existing user</span>
                <% if(locals.logout){ %>
                    <div class="alert alert-success text-center">
                        <%= logout %>
                    </div>
                <% } %>
            </div>
            <form action="/route/login" method="POST">
                <div class="form-group py-2">
                    <input type="email" name="email" placeholder="Enter Email" id="" class="form-control">
                    <small class="form-text text-muted text-left">Register Email Address</small>
                </div>
                <div class="form-group py-2">
                    <input type="password" name="password" id="" class="form-control" placeholder="Enter Password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill mt-4">Submit</button>
            </form>
        </div>
    </div>

<%-include('footer')-%>  
